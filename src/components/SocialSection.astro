---
import TitleAndText from "./TitleAndText.astro";
import ReviewCardContainer from "./ReviewCardContainer.astro";
import RatedCardContainer from "./RatedCardContainer.astro";

const titleAndText = {
  title: "10,000+ of our users love our products.",
  text: "We only provide great products combined with excellent customer service. See what our satisfied customers are saying about our services.",
};
---

<section class="z-50 flex flex-col gap-12 2xl:gap-14">
  <div class="flex flex-col gap-10 2xl:flex-row">
    <TitleAndText {...titleAndText} />
    <RatedCardContainer />
  </div>
  <ReviewCardContainer />
</section>
