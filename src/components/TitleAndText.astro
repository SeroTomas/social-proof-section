---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="flex flex-col items-center gap-6 text-center 2xl:w-1/2 2xl:text-left 2xl:items-start">
  <h2 class="text-c-darkMagenta text-4xl font-bold w-3/4 leading-7 2xl:text-6xl">
    {title}
  </h2>
  <p class="text-c-dGMagenta text-lg font-medium 2xl:text-2xl 2xl:w-5/6">
    {text}
  </p>
</div>
